<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.quizzapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizzApp">
        <activity android:name=".DisplayQuiz"></activity>
        <activity android:name=".AddQuestionActivity" />
        <activity android:name=".AddingQuestionsInQuiz" />
        <activity android:name=".AddQuizActiivity" />
        <activity android:name=".AddQuizActivity" />
        <activity android:name=".QuizzesActivity" />
        <activity
            android:name=".ResultActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noooActionBarTheme" />
        <activity
            android:name=".QuizQuestionsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/myActionBarThemeForQuestions" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/noooActionBarTheme"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>